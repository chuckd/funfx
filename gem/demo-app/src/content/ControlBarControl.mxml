<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
    <mx:Panel height="75%" width="75%" id="controlBarPanel"
        paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">

       <mx:Label id="cbLabel" width="100%" color="blue"
           text="Button has not been clicked"/>

      <mx:ControlBar id="cbBar">
        <mx:Button id="cbButton" label="Click" click="{cbLabel.text = 'Button was clicked'}"/>      
      </mx:ControlBar>   

    </mx:Panel>
</mx:VBox>
