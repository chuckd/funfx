<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
        import mx.controls.Alert;
    </mx:Script>

    <mx:Panel title="LinkButton Control Example" 
        height="75%" width="75%" horizontalAlign="center"
        showInAutomationHierarchy="false"
        paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">
       
        <mx:Label width="100%" 
            text="Select the LinkButton control to open the Alert control."/>

        <mx:LinkButton id="lbButton" label="LinkButton control" color="#0000FF" fontWeight="bold" 
            click="Alert.show('LinkButton selected!', 'LinkButtonMessage');"/>

    </mx:Panel>
</mx:VBox>
